<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_baseShare"
    android:layout_width="fill_parent"
    android:layout_height="80.0dip"
    android:clickable="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_resPracticeDate"
        android:layout_width="fill_parent"
        android:layout_height="30.0dip"
        android:gravity="center"
        android:text="训练时间：2016-10-14 10：35：36"
        android:textSize="18.0sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="49.0dip"
        android:orientation="horizontal"
        android:padding="5.0dip">

        <TextView
            android:id="@+id/tv_resAccuracy"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="2.0"
            android:gravity="center"
            android:text="正确率：100.0%"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/tv_resSpeed"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="2.0"
            android:gravity="center"
            android:text="速度：15字/分钟"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/tv_resCorrectCount"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="正确个数：18"
            android:textSize="14.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="5.0dip"
        android:background="@color/gray" />
</LinearLayout>